<h3>You're playing.... Blackjack!</h3>

<div class="well well-small">
  <h5>Dealer's cards:</h5>
  <% session[:dealer_cards].each_with_index do |card, i| %>
    <% if i == 0 && session[:player_stand?] == false && session[:game_over?] == false %>
      <img class='card' src="images/cards/cover.jpg"></span>
    <% else %>
      <%= get_card_image(card) %>
    <% end %>
  <% end %>
  <% if session[:game_over?] || session[:player_stand?] %>
    </br></br>
    <p>Value: <%= hand_value(session[:dealer_cards]).to_s %></p>
  <% end %>
</div>
</br>

<div class="well well-small">
  <h5><%= session[:player_name] %>'s cards:</h5>
  <% session[:player_cards].each do |card| %>
    <%= get_card_image(card) %>
  <% end %>
  </br></br>
  <p>Value: <%= hand_value(session[:player_cards]).to_s %></p>
</div>



<% if session[:game_over?] == true %> <!-- Display end-result of game -->
  <form action='/startover' method='post'>
    <input type="submit" class="btn btn-success" value="Start Over"/>
  </form>
<% elsif session[:player_stand?] == false %> <!-- Player turn in-progress -->
  <form id="player_hit_form" action='/player_hit' method='post'>
    <input type="submit" class="btn btn-info" value="Hit"/>
  </form>
  <form id="player_stand_form" action='/player_stand' method='post'>
    <input type="submit" class="btn btn-warning" value="Stand"/>
  </form>
<% else %>  <!-- Dealer turn in-progress -->
  <form id="dealer_next_card_form" action='/dealer_next_card' method='post'>
    <input type="submit" class="btn btn-primary" value="Next Card"/>
  </form>
<% end %>


<!--
  Conditions for button display.

  Player busts - Remove Hit/Stay, display loser message, display results, display Start Over button
  Player stands - Remove Hit/Stay, display Next Card button
  Dealer stands - Remove Hit/Stay, display results
  Dealer busts - Remove Hit/Stay and Next Card buttons, calculate winner and display message, display results, display Start Over button
-->