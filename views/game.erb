<!-- Dealer's area -->
<div class="well well-small">
  <h5>Dealer's cards:</h5>
  <% session[:dealer_cards].each_with_index do |card, i| %>
    <% if i == 0 && @show_dealer_hand == false %>
      <img class='card' src="/images/cards/cover.jpg">
    <% else %>
      <%= get_card_image(card) %>
    <% end %>
  <% end %>

  <% if @show_dealer_hand %>
    </br></br>
    <p>Value: <%= hand_value(session[:dealer_cards]).to_s %></p>
  <% end %>

  <% if @show_dealer_hit_button %>
    <form action='/game/dealer/hit' method='post'>
      <input type="submit" class="btn btn-primary" value="Reveal dealer's next card."/>
    </form>
  <% end %>
</div>

</br>

<!-- Player's area -->
<div class="well well-small">
  <h5><%= session[:player_name] %>'s cards:</h5>
  <% session[:player_cards].each do |card| %>
    <%= get_card_image(card) %>
  <% end %>
  </br></br>
  <p>Value: <%= hand_value(session[:player_cards]).to_s %></p>
  </br>
  <p>Current bet: $<%= session[:current_bet] %>
  </br>
  <p><%= session[:player_name] %>'s available cash:  $<%= session[:player_cash] %></p>
</div>

<% if @show_hit_and_stand_buttons %>
  <form id="player_hit_form" action='/player/hit' method='post'>
    <input type="submit" class="btn btn-info" value="Hit"/>
  </form>
  <form id="player_stand_form" action='/player/stand' method='post'>
    <input type="submit" class="btn btn-warning" value="Stand"/>
  </form>
<% end %>

<!--
  Conditions for button display.

  Player busts - Remove Hit/Stay, display loser message, display results, display Start Over button
  Player stands - Remove Hit/Stay, display Next Card button
  Dealer stands - Remove Hit/Stay, display results
  Dealer busts - Remove Hit/Stay and Next Card buttons, calculate winner and display message, display results, display Start Over button
-->